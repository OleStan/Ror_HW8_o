<div class="container">
<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control",placeholder: 'max symbol 23',  maxlength: "23" %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control",placeholder: 'max symbol 23',  maxlength: "23" %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.text_field :image, class: "form-control"  %>
  </div>

  <div class="actions">
    <%= form.submit( {:class => "btn btn-success"})%>
  </div>

<% end %>
</div>